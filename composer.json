{
    "name": "pantheon-systems/example-drops-8-composer",
    "description": "Install drops-8 with Composer on Pantheon.",
    "type": "project",
    "license": "MIT",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "php": ">=7.0.8",
        "composer/installers": "^1.0.20",
        "cweagans/composer-patches": "^1.0",
        "desandro/imagesloaded": "^4.1",
        "drupal-composer/drupal-scaffold": "^2.0.1",
        "drupal/address": "^1.7",
        "drupal/admin_toolbar": "^2.0",
        "drupal/antibot": "^1.2",
        "drupal/backup_migrate": "^4.0",
        "drupal/captcha": "^1.0@beta",
        "drupal/colorbox": "^1.4",
        "drupal/config_direct_save": "^1.0",
        "drupal/config_installer": "^1.0",
        "drupal/console": "^1.9",
        "drupal/context": "^4.0@beta",
        "drupal/context_metadata": "^2.0",
        "drupal/context_ui": "^4.0@beta",
        "drupal/core": "^8.8",
        "drupal/date_popup": "^1.0",
        "drupal/diff": "^1.0@RC",
        "drupal/dropzonejs": "^2.0",
        "drupal/easy_breadcrumb": "^1.12",
        "drupal/easy_install": "^10.1",
        "drupal/embed": "^1.0",
        "drupal/entity_embed": "^1.0",
        "drupal/entityqueue": "^1.0@beta",
        "drupal/eva": "^1.3",
        "drupal/facets": "^1.4",
        "drupal/features": "^3.8",
        "drupal/field_group": "^1.0",
        "drupal/file_browser": "^1.2",
        "drupal/focal_point": "^1.2",
        "drupal/google_tag": "^1.2",
        "drupal/honeypot": "^1.30",
        "drupal/image_browser": "^1.4",
        "drupal/image_widget_crop": "^2.2",
        "drupal/imce": "^1.7",
        "drupal/inline_entity_form": "^1.0@RC",
        "drupal/jcarousel": "^4.0",
        "drupal/libraries": "^3.0@alpha",
        "drupal/mailchimp": "^1.11",
        "drupal/mailsystem": "^4.1",
        "drupal/mandrill": "^1.1",
        "drupal/media_migration": "^1.0@alpha",
        "drupal/menu_block": "^1.5",
        "drupal/metatag": "^1.10",
        "drupal/metatag_facebook": "^1.10",
        "drupal/migrate_file": "^1.1",
        "drupal/migrate_plus": "^4.2",
        "drupal/migrate_tools": "^4.4",
        "drupal/migrate_upgrade": "^3.0",
        "drupal/omega_tools": "^5.0@alpha",
        "drupal/panels": "^4.4",
        "drupal/pantheon_advanced_page_cache": "^1.0",
        "drupal/paragraphs": "^1.10",
        "drupal/pathauto": "^1.5",
        "drupal/pathologic": "^1.0@alpha",
        "drupal/plugin": "^2.6",
        "drupal/plupload": "^1.0@beta",
        "drupal/prepopulate": "^2.2",
        "drupal/purge": "^3.0@beta",
        "drupal/redirect": "^1.4",
        "drupal/reroute_email": "^1.1",
        "drupal/rules": "^3.0@alpha",
        "drupal/search_api_attachments": "^1.0@beta",
        "drupal/search_api_pantheon": "~1.0",
        "drupal/site_audit": "^2.2",
        "drupal/smart_ip": "^3.7",
        "drupal/smtp": "^1.0@beta",
        "drupal/token": "^1.5",
        "drupal/token_filter": "^1.1",
        "drupal/twig_tweak": "^2.5",
        "drupal/view_unpublished": "^1.0@alpha",
        "drupal/viewfield": "^3.0@beta",
        "drupal/views_bulk_operations": "^3.3",
        "drupal/views_data_export": "^1.0@beta",
        "drupal/webform": "^5.5",
        "drupal/workflow": "^1.1",
        "drupal/workflow_ui": "^1.1",
        "drupal/xmlsitemap": "^1.0@alpha",
        "drush/drush": "^9.7",
        "enyo/dropzone": "^5.7",
        "rvtraveller/qs-composer-installer": "^1.1",
        "symfony/http-foundation": "^3.4",
        "typo3/phar-stream-wrapper": "^3.0",
        "webflo/drupal-core-require-dev": "^8.8",
        "zaporylie/composer-drupal-optimizations": "^1.0"
    },
    "require-dev": {
    },
    "conflict": {
            "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "scripts": {
        "build-assets": [
            "@prepare-for-pantheon",
            "composer install --optimize-autoloader --no-dev"
        ],
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "prepare-for-pantheon": "DrupalProject\\composer\\ScriptHandler::prepareForPantheon",
        "post-install-cmd": [
            "@drupal-scaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-create-project-cmd": [
            "@drupal-scaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ]
    },
    "extra": {
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/contrib/{$name}": ["type:drupal-drush"],
            "web/private/scripts/quicksilver/{$name}/": ["type:quicksilver-script"]
        },
        "build-env": {
            "install-cms": [
                "drush site-install standard --account-mail={account-mail} --account-name={account-name} --account-pass={account-pass} --site-mail={site-mail} --site-name={site-name} --yes"
            ],
            "export-configuration": "drush config-export --yes"
        },
        "drupal-scaffold": {
            "source": "https://raw.githubusercontent.com/pantheon-systems/drops-8-scaffolding/{version}/{path}",
            "includes": [
                "sites/default/default.services.pantheon.preproduction.yml",
                "sites/default/settings.pantheon.php"
            ],
            "excludes": [
                ".csslintrc",
                ".editorconfig",
                ".eslintignore",
                ".eslintrc.json",
                ".htaccess",
                "web.config"
            ]
        },
        "enable-patching": true,
        "patches": {
            "drupal/geoip": {
                "3014113: Debug lookup form for testing plugins": "https://www.drupal.org/files/issues/2018-11-16/debug-lookup-3014113-1.patch"
            }
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "php": "7.2.24"
        }
    }
}
